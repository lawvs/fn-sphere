{
  "name": "@fn-sphere/filter",
  "version": "0.8.0",
  "type": "module",
  "description": "Filter Sphere is a powerful and flexible library for creating dynamic filtering interfaces in your web applications.",
  "keywords": [
    "filter-builder",
    "advanced-filter",
    "logic-builder",
    "query-builder",
    "filter",
    "react",
    "typescript",
    "zod"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:lawvs/fn-sphere.git",
    "directory": "packages/filter"
  },
  "author": "whitewater <me@waterwater.moe>",
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "typeCheck": "tsc --noEmit",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "test": "vitest"
  },
  "dependencies": {
    "@fn-sphere/core": "workspace:^"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.37.3",
    "@eslint/js": "^9.37.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "jsdom": "^26.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript-eslint": "^8.27.0",
    "zod": "^4.1.11"
  },
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "zod": "^4.1.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "exports": {
    ".": "./src/index.ts",
