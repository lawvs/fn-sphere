    "access": "public",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./locales": {
        "types": "./dist/locales/index.d.ts",
        "import": "./dist/locales/index.js"
      },
      "./package.json": "./package.json"
    }
  }
}